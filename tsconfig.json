{
    "compilerOptions" : {
        "target" : "es6",
        "outDir" : "app/js",
        "noEmitOnError" : true, // não gera o arquivo js caso exista um erro
        "noImplicitAny" : true, // obriga a declarar o tipo da variável
        "removeComments" : true,
        "module" : "system",
        "strictNullChecks": true,
        "experimentalDecorators": true
    },
    "include" : [
        "app/ts/**/*"
    ]
}